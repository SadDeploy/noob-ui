                            th Кол-во
                            th &nbsp;
                    tbody
                        - for (var x = 0; x < 3; x++)
                            tr
                                td WC4260sp00
                                    span.show.padtop10.padbot0.font-sm.text-default Аналоги:
                                td
                                    a(href="#").underline__link Canon PowerShot SX60 HS
